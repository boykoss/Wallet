<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainlay"
    tools:context=".AddOrEditWallet_Activity">


    <EditText
        android:id="@+id/idEdtNoteName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter wallet title"
        android:layout_marginTop="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/mainlay"
        app:layout_constraintBaseline_toTopOf="@+id/mainlay"
        app:layout_constraintEnd_toEndOf="@+id/mainlay"
        app:layout_constraintStart_toStartOf="@+id/mainlay"

        android:minHeight="48dp"
         />

    <EditText
        android:id="@+id/idEdtNoteDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start|top"
        android:hint="Enter your Note Details"
        app:layout_constraintBottom_toBottomOf="@+id/idEdtNoteName"
        app:layout_constraintBaseline_toTopOf="@+id/idEdtNoteName"
        app:layout_constraintEnd_toEndOf="@+id/idEdtNoteName"
        app:layout_constraintStart_toStartOf="@+id/idEdtNoteName"
        android:inputType="textMultiLine"
        android:minHeight="48dp"
        android:singleLine="false" />

    <Button
        android:id="@+id/idSaveOrEditBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Done"
        android:textAllCaps="false"
        android:textColor="@color/white"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="314dp" />

    <include
        android:id="@+id/include"
        layout="@layout/bottom_activity"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="-38dp" />


</androidx.constraintlayout.widget.ConstraintLayout>